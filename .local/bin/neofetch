#!/bin/sh
if [ "$SHELL" == "/usr/bin/petty" ]; then
	source "$HOME"/.config/petty/pettyrc
	export SHELL=$shell
fi

if [ -n "$SWAYSOCK" ]; then
	scrot_cmd=swaygrab
else
	scrot_cmd=maim
fi

export DISTRIB_DESCRIPTION=FoosterOS

clear

exec /usr/bin/neofetch --colors 124 52 52 124 52 249 --ascii_distro gentoo --ascii_colors 52 88 --scrot_cmd "$scrot_cmd" -s "$HOME"/tmp/screenshot.png "$@"
