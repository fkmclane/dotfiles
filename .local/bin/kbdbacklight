#!/bin/bash
path="/sys/class/leds/spi::kbd_backlight"

if [ $# -ne 0 ] && [ $# -ne 1 ]; then
	echo "Usage: $0 [=|-|+][brightness]" >&2
	exit 1
fi

max="$(cat "$path"/max_brightness)"
cur="$(cat "$path"/brightness)"

if [ $# -eq 0 ]; then
	echo $cur
else
	first="${1::1}"
	last="${1:1}"

	calc() {
		echo $(expr $(expr $1 '*' $max) / 100)
	}

	if [ "$first" == "+" ]; then
		cur="$(expr $cur + "$(calc $last)")"
	elif [ "$first" == "-" ]; then
		cur="$(expr $cur - "$(calc $last)")"
	elif [ "$first" == "=" ]; then
		cur="$(calc $last)"
	else
		cur="$(calc $1)"
	fi

	echo $cur

	if [ $cur -gt $max ]; then
		cur=$max
	elif [ $cur -lt 0 ]; then
		cur=0
	fi

	echo $cur

	echo $cur >"$path"/brightness
fi
