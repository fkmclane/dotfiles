#!/bin/sh
if xrandr | grep HDMI-1-1; then
	DSP=eDP-1-1
	TV=HDMI-1-1
else
	DSP=eDP-1
	TV=HDMI-1
fi

xrandr --output $TV --off --output $DSP --mode 1920x1080 --pos 0x0 --rotate normal
synclient TouchPadOff=0

if [ "$XDG_SESSION_DESKTOP" == bspwm ]; then
	bspc monitor $TV -r
	kill "$(ps ax | grep barline | grep $TV | cut -d' ' -f2)"
	bspwmmon $DSP
	bspc wm -o
fi
