#!/bin/sh -m
if [ "$#" -eq 0 ]; then
    bin="$(zenity --file-selection)"

    if which "$bin" &>/dev/null; then
        setsid "$bin" &>/dev/null
    else
        echo "run: $bin: executable not found" >&2
    fi
else
    if which "$1" &>/dev/null; then
        setsid "$@" &>/dev/null
    else
        echo "run: $1: executable not found" >&2
    fi
fi
