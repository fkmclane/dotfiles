#!/bin/sh
# X properties
xsetroot -cursor_name left_ptr
xrdb -merge "$HOME"/.Xresources

# background
display -window root "$(find "$HOME"/.background/1080 | shuf -n1)"

# background services
/usr/libexec/polkit-gnome-authentication-agent-1 &

# desktop services
sxhkd &
clipster -d &

# window manager
bspwmmon eDP-1 &
bspwm
while [ $? -eq 128 ]; do
	bspwmmon eDP-1 &
	bspwm
done
