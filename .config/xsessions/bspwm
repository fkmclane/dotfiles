#!/bin/sh
# X properties
xsetroot -cursor_name left_ptr
xrdb -merge ~/.Xresources
nitrogen --restore

# background services
/usr/libexec/polkit-gnome-authentication-agent-1 &

# desktop services
barline | lemonbar -f terminus:10.5 -B '#121212' -F '#d7d7d7' -U '#ea2828' &
sxhkd &

# window manager
bspwm
while [ $? -eq 128 ]; do
	bspwm
done
