#!/bin/sh
# OpenGL
pkexec /usr/bin/eselect opengl set 1
pkexec /usr/bin/eselect opencl set 3

# X properties
xrdb -merge ~/.Xresources

# setup xrandr
xrandr --setprovideroutputsource modesetting NVIDIA-0
xrandr --auto

# start wm
openbox &

# TV detection
if xrandr | grep "HDMI-1-1 connected"; then
	tvup
fi

# start steam
steam -bigpicture

# OpenGL
pkexec /usr/bin/eselect opengl set 2
pkexec /usr/bin/eselect opencl set 2
