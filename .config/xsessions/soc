#!/bin/sh
# X properties
xsetroot -cursor_name left_ptr
xrdb -merge "$HOME"/.Xresources
setxkbmap

# background
newbg

# background services
pgrep polkit-gnome || /usr/libexec/polkit-gnome-authentication-agent-1 &

# desktop services
sxhkd &
clipster -f "$HOME"/.config/clipster/clipster-soc.ini -d &
compton -b

# window manager
bspwmmon VNC-0 &
bspwm
while [ $? -eq 128 ]; do
	bspwmmon VNC-0 &
	bspwm
done
