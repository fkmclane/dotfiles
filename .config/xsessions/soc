#!/bin/sh
# X properties
xsetroot -cursor_name left_ptr
xrdb -merge "$HOME"/.Xresources
display -window root "$HOME"/.background/symphony-impossible-to-play-1440.png

# background services
/usr/libexec/polkit-gnome-authentication-agent-1 &

# desktop services
sxhkd &
bspwmmon screen &
clipster -d &

# window manager
bspwm
while [ $? -eq 128 ]; do
	bspwm
done
