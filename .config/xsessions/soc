#!/bin/sh
# X properties
xsetroot -cursor_name left_ptr
xrdb -merge "$HOME"/.Xresources

# background
display -window root "$(find "$HOME"/.background/1440 | shuf -n1)"

# background services
/usr/libexec/polkit-gnome-authentication-agent-1 &

# desktop services
sxhkd &
clipster -f "$HOME"/.config/clipster/clipster-soc.ini -d &

# window manager
bspwmmon VNC-0 &
bspwm
while [ $? -eq 128 ]; do
	bspwmmon VNC-0 &
	bspwm
done
