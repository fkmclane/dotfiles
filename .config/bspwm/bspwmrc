# desktop settings
bspc config border_width 2
bspc config window_gap 12

# color settings
bspc config normal_border_color "#444444"
bspc config active_border_color "#884444"
bspc config focused_border_color "#aa4444"
bspc config presel_feedback_color "#aa4444"

# rules
bspc rule -a stalonetray state=floating
bspc rule -a qjackctl state=floating
bspc rule -a qsynth state=floating
bspc rule -a vmpk state=floating
bspc rule -a Unity state=floating
bspc rule -a Google-chrome:crx_gaedmjdfmmahhbjefcbgaolhhanlaolb state=floating
bspc rule -a airtame-application state=floating
