[global]
    font = Monofur 14

    allow_markup = yes
    plain_text = no

    # %a  appname
    # %s  summary
    # %b  body
    # %i  iconname (including its path)
    # %I  iconname (without its path)
    # %p  progress value if set ([  0%] to [100%]) or nothing
    format = "<b>%s</b>\n%b"

    sort = yes

    indicate_hidden = yes

    alignment = left

    bounce_freq = 0

    show_age_threshold = 60

    word_wrap = yes

    ignore_newline = no

    geometry = "300x5-30+39"

    title = Dunst
    class = Dunst

    shrink = no

    transparency = 0

    idle_threshold = 120

    monitor = 0

    # mouse: follow mouse pointer
    # keyboard: follow window with keyboard focus
    # none: don't follow anything
    follow = mouse

    stack_duplicates = true
    hide_duplicates_count = false

    sticky_history = yes
    history_length = 20

    show_indicators = yes

    line_height = 0

    notification_height = 0

    separator_height = 1

    padding = 8

    horizontal_padding = 8

    # * auto: dunst tries to find a color fitting to the background;
    # * foreground: use the same color as the foreground;
    # * frame: use the same color as the frame;
    # * anything else will be interpreted as a X color.
    separator_color = frame

    startup_notification = false

    dmenu = /usr/bin/rofi -dmenu -p dunst:

    browser = /usr/bin/qutebrowser

    icon_position = off
    max_icon_size = 32

    icon_folders = /usr/share/icons/Arc/status/16/:/usr/share/icons/Arc/devices/16/

    always_run_script = true

[frame]
    width = 1
    color = "#535551"

[shortcuts]
    close = mod4+ctrl+backslash
    close_all = mod4+shift+backslash
    history = mod4+grave
    context = mod4+slash

[urgency_low]
    background = "#121212"
    foreground = "#a9a9a9"
    timeout = 0
    #icon = /path/to/icon

[urgency_normal]
    background = "#121212"
    foreground = "#a9a9a9"
    timeout = 0
    #icon = /path/to/icon

[urgency_critical]
    background = "#121212"
    foreground = "#ea2828"
    timeout = 0
    #icon = /path/to/icon

# vim: ft=cfg
