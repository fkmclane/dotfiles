# sxhkd

super + r
	pkill -USR1 -x sxhkd

# bspwm

super + q
	bspc quit

super + {_,shift + }w
	bspc node -{c,k}

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc node -t {floating,fullscreen}

super + {grave,Tab}
	bspc {node,desktop} -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node -f {older,newer}; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

# buttons

{_,shift + ,super + }XF86MonBrightness{Down,Up}
	xbacklight {-10%,-1%,=0%,+10%,+1%,=100%}

{_,shift + ,super + }XF86Audio{Lower,Raise}Volume
	amixer -q -D pulse sset Master {10%-,1%-,0%,10%+,1%+,100%}

XF86AudioMute
	amixer -q -D pulse sset Master toggle

XF86Audio{Play,Stop,Prev,Next}
	mpc -q {toggle,stop,prev,next}

# applications

super + semicolon
	urxvt

super + shift + semicolon
	bspc desktop -f term; \
	urxvt

super + a
	qutebrowser

super + shift + a
	bspc desktop -f www; \
	qutebrowser

super + d
	bspc desktop -f chat; \
	urxvt -e irssi

super + Return
	rofi -show run

super + space
	physlock
