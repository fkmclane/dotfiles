# sxhkd

## reload sxhkd
super + r
	pkill -USR1 -x sxhkd

# bspwm

## quit
super + q
	bspc quit

## reload
super + e
	bspc wm -d > /tmp/bspwm_"$XDG_VTNR"_state; \
	bspc quit 128; \
	bspc wm -o; \
	bspc wm -l /tmp/bspwm_"$XDG_VTNR"_state; \
	rm /tmp/bspwm_"$XDG_VTNR"_state

## adopt orphans
super + t
	bspc wm -o

## close/kill node
super + {_,shift + }w
	bspc node -{c,k}

## focus/move node
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

## cycle nodes
super + {z,x}
	bspc node -f {next,prev}

## preselect node
super + ctrl + {h,j,k,l,space}
	bspc node -p {west,south,north,east,cancel}

## swap nodes
super + c
	bspc node -s last

## bring node above
super + {b,n,m}
	bspc node -l {below,normal,above}

## balance tree
super + y
	bspc node /first -B

## equalize tree
super + u
	bspc node /first -E

## adjust node ratio
super + shift + ctrl + {j,k}
	bspc node -r {-,+}40px

## send node to desktop
super + shift + {1-9,0}
	bspc node -d focused:^{1-9,10}

## send node to monitor
super + shift + ctrl + {1-9,0}
	bspc node -m ^{1-9,10}

## focus desktop
super + {1-9,0}
	bspc desktop -f focused:^{1-9,10}

## cycle layout
super + p
	bspc desktop -l next

## swap desktops
super + ctrl + {1-9,0}
	bspc desktop -s focused:^{1-9,10}

## bubble desktop
super + ctrl + {j,k}
	bspc desktop -b {prev,next}

## send desktop to monitor
super + ctrl + alt + {1-9,0}
	bspc desktop -m ^{1-9,10}

## focus/move monitor
super + alt + {_,shift + }{h,j,k,l}
	bspc monitor -{f,s} {west,south,north,east}

## swap monitors
super + alt + c
	bspc monitor -s last

## fix monitors
super + i
	for mon in $(bspc query -M); do \
		~/.config/bspwm/bspwmmon "$mon"; \
	done

## move/resize node
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

## pass pointer data
super + !button{1-3}
	bspc pointer -t %i %i

## ungrab node
super + @button{1-3}
	bspc pointer -u

# buttons

## direct brightness buttons to xbacklight
{_,shift + ,super + }XF86MonBrightness{Down,Up}
	xbacklight {-10%,-1%,=0%,+10%,+1%,=100%}

## direct volume buttons to ALSA
{_,shift + ,super + }XF86Audio{Lower,Raise}Volume
	amixer -q -D pulse sset Master {10%-,1%-,0%,10%+,1%+,100%}

## direct mute button to ALSA
XF86AudioMute
	amixer -q -D pulse sset Master toggle

## direct media control buttons to mpd
XF86Audio{Play,Stop,Prev,Next}
	mpc -q {toggle,stop,prev,next}

# applications

## open urxvt
super + semicolon
	urxvt

## open urxvt on the "term" desktop
super + shift + semicolon
	bspc desktop -f term; \
	urxvt

## open qutebrowser
super + a
	qutebrowser

## open qutebrowser on the "www" desktop
super + shift + a
	bspc desktop -f www; \
	qutebrowser

## open irssi on the "chat" desktop
super + s
	bspc desktop -f chat; \
	urxvt -e irssi

## mount media
super + d
	mntup

## unmount media
super + f
	mntdown

## start application runner
super + Return
	rofi -show run

## start window switcher
super + apostrophe
	rofi -show window

## lock all ttys
super + space
	physlock

## swap copy buffers
super + {_,shift + }backslash
	xsel -{b,p}o | xsel -{p,b}i
