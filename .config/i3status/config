general {
	colors = true

	color_good = "#d7d7d7"
	color_degraded = "#ea2828"
	color_bad = "#ea2828"

	interval = 5
}

order += "load"
order += "cpu_temperature 1"
order += "volume master"
order += "wireless wlp8s0"
order += "battery 1"
order += "disk /"
order += "tztime local"

load {
	format = "cpu: %1min"
}

cpu_temperature 1 {
	format = "temp: %degrees Â°C"
}

volume master {
	format = "vol: %volume"
	format_muted = "vol: mute"
}

wireless wlp8s0 {
	format_up = "wlan: %essid"
	format_down = "wlan: off"
}

battery 1 {
	integer_battery_capacity = true
	low_threshold = 12

	status_chr = "^"
	status_bat = ""
	status_unk = "?"
	status_full = ""

	format = "batt: %status%percentage"
	format_down = "batt: none"
}

disk / {
	format = "disk: %avail"
}

tztime local {
	format = "%H:%M"
}
